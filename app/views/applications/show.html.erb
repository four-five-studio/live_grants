<h1>Granter view</h1>

<%= turbo_stream_from @application %>
<h1 class="govuk-heading-l"><%= @application.name %></h1>

<div class="govuk-summary-list">
    <div class="govuk-summary-list__row">
        <dt class="govuk-summary-list__key">Amount:</dt>
        <dd class="govuk-summary-list__value"><%= @application.amount %></dd>
    </div>

    <div class="govuk-summary-list__row">
        <dt class="govuk-summary-list__key">Sport:</dt>
        <dd class="govuk-summary-list__value"><%= @application.sport %></dd>
    </div>

    <div class="govuk-summary-list__row">
        <dt class="govuk-summary-list__key">People count:</dt>
        <dd class="govuk-summary-list__value"><%= @application.people_count %></dd>
    </div>

    <div class="govuk-summary-list__row">
        <dt class="govuk-summary-list__key">Inactivity:</dt>
        <dd class="govuk-summary-list__value"><%= @application.inactivity %></dd>
    </div>
</div>