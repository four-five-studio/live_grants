<%= form_for @application, data: { controller: 'auto-submit' } do |form| %>
    <div class="field">
        <%= form.label :name %>
        <%= form.text_field :name, data: { action: 'keyup->auto-submit#submit' } %>
    </div>

    <div class="field">
        <%= form.label :amount %>
        <%= form.number_field :amount, data: { action: 'keyup->auto-submit#submit' } %>
    </div>

    <p>
